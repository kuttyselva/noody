extends layout/main-layout.pug
block content
     main.container(style="display: flex;")
        if pro.length > 0
            each product in pro
                .text-center.card(style="width:18rem;")
                    .card-body
                        h4.card-title #{product.title}
                        img.card-img-top(src="https://timedotcom.files.wordpress.com/2015/06/521811839-copy.jpg", alt="")
                        h5.card-title $200
                        p.card-text Some text
                        a.btn.btn-dark(href="#") Add
        else
            h1.display-3.text-center No Products
        