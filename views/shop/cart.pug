extends ../layout/main-layout.pug
block content
    if pro.length > 0
        ul.list-group
            each p in pro
                li.list-group-item.d-flex.justify-content-between.align-items-center #{p.productData.title} 
                    span.badge.badge-primary.badge-pill.float-left(style="font-size:100%;") #{p.qty}
                    form(action="/cart-del-item", method="post")
                        button.btn.btn-outline-danger(style="font-size:100%;",type="submit") Delete
                        input(type="hidden", name="proid",value=p.productData.id)
                            

    else    
        h1 no Product